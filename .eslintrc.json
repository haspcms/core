{
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "warn",
    "no-console": ["warn", { "allow": ["error"] }],
    "no-undef": "warn",
    "no-unused-vars": ["warn", { "args": "none" }],
    "eqeqeq": ["warn", "always"],
    "no-unexpected-multiline": "warn",
    "no-cond-assign": ["warn", "always"],
    "no-redeclare": "warn",
    "no-self-compare": "warn"
  }
}
